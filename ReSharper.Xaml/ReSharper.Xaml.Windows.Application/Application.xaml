<?xml version="1.0" encoding="utf-8" ?>
<wpf:Application xmlns="http://xamarin.com/schemas/2014/forms"
	x:Class="ReSharper.Xaml.Windows.Application.Application"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:wpf="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:windows="clr-namespace:ReSharper.Xaml.Windows;assembly=ReSharper.Xaml.Windows"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	mc:Ignorable="d" 
	d:DesignHeight="300" d:DesignWidth="300"
	d:DataContext="{d:DesignInstance {x:Type ContentPage}}"
	ShutdownMode="OnMainWindowClose"
>
	<wpf:Application.MainWindow>
		<windows:MainWindow Background="{windows:Color}" Title="{wpf:Binding Source={x:Static Member=windows:MessageExtension.Instance}}" Content="{wpf:Binding Message}">
			<windows:MainWindow.DataContext>
				<windows:DataModel Message="Hello World!!!" />
			</windows:MainWindow.DataContext>
		</windows:MainWindow>
	</wpf:Application.MainWindow>
</wpf:Application>